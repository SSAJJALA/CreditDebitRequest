<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>CDMR</display-name>

    <!-- Tell the server to use form-based authentication. -->
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/failedLogin.jsp</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <role-name>SR</role-name>
    </security-role>
    <security-role>
        <role-name>DSM</role-name>
    </security-role>
    <security-role>
        <role-name>FM</role-name>
    </security-role>

    <!-- Protect index.jsp -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>index</web-resource-name>
            <url-pattern>/index.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>DSM</role-name>
            <role-name>FM</role-name>
            <role-name>SR</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Protect inbox.jsp -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>inbox</web-resource-name>
            <url-pattern>/inbox.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>DSM</role-name>
            <role-name>FM</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Protect search.jsp -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>search</web-resource-name>
            <url-pattern>/search.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>SR</role-name>
            <role-name>DSM</role-name>
            <role-name>FM</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Protect createCDMR.jsp -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>createCDMR</web-resource-name>
            <url-pattern>/createCDMR.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>SR</role-name>
            <role-name>DSM</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Protect cdmrDetails.jsp -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>cdmrDetails.jsp</web-resource-name>
            <url-pattern>/cdmrDetails.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>FM</role-name>
            <role-name>DSM</role-name>
        </auth-constraint>
    </security-constraint>

    <servlet>
        <servlet-name>Entry</servlet-name>
        <servlet-class>com.cdmr.controller.Entry</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>Entry</servlet-name>
        <url-pattern>/entry</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>reasonCode</param-name>
        <param-value>1-Defective, 2-Price Correction, 3-Returned</param-value>
    </context-param>


    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.cdmr.controller.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DirectToSearch</servlet-name>
        <servlet-class>com.cdmr.controller.DirectToSearch</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DirectToSearch</servlet-name>
        <url-pattern>/toSearch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DirectToInbox</servlet-name>
        <servlet-class>com.cdmr.controller.DirectToInbox</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DirectToInbox</servlet-name>
        <url-pattern>/toInbox</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>inboxServlet</servlet-name>
        <servlet-class>com.cdmr.controller.InboxServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>inboxServlet</servlet-name>
        <url-pattern>/inboxServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchServlet</servlet-name>
        <servlet-class>com.cdmr.controller.SearchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>searchServlet</servlet-name>
        <url-pattern>/searchServlet</url-pattern>
    </servlet-mapping>



</web-app>
