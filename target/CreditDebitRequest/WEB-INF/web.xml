<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>CDMR</display-name>

    <security-role>
        <role-name>TM</role-name>
    </security-role>
    <security-role>
        <role-name>DSM</role-name>
    </security-role>
    <security-role>
        <role-name>FM</role-name>
    </security-role>

    <servlet>
        <servlet-name>Entry</servlet-name>
        <servlet-class>com.cdmr.controller.Entry</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>Entry</servlet-name>
        <url-pattern>/entry</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.cdmr.controller.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DirectToSearch</servlet-name>
        <servlet-class>com.cdmr.controller.DirectToSearch</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DirectToSearch</servlet-name>
        <url-pattern>/toSearch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DirectToInbox</servlet-name>
        <servlet-class>com.cdmr.controller.DirectToInbox</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DirectToInbox</servlet-name>
        <url-pattern>/toInbox</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>inboxServlet</servlet-name>
        <servlet-class>com.cdmr.controller.InboxServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>inboxServlet</servlet-name>
        <url-pattern>/inboxServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchServlet</servlet-name>
        <servlet-class>com.cdmr.controller.SearchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>searchServlet</servlet-name>
        <url-pattern>/searchServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DirectToCreate</servlet-name>
        <servlet-class>com.cdmr.controller.DirectToCreate</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DirectToCreate</servlet-name>
        <url-pattern>/toCreate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createCDMRServlet</servlet-name>
        <servlet-class>com.cdmr.controller.CreateCDMRServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createCDMRServlet</servlet-name>
        <url-pattern>/createCDMRServlet</url-pattern>
    </servlet-mapping>


</web-app>
