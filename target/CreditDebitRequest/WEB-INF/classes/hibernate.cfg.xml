<?xml version='1.0' encoding='utf-8'?>

<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/APPSPROD?useSSL=false</property>
        <property name="connection.username">root</property>
        <property name="connection.password">student</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- List the annotated entity class/es -->
        <mapping class="com.cdmr.entity.Requisition"/>
        <mapping class="com.cdmr.entity.Customer"/>
        <mapping class="com.cdmr.entity.InvoiceHeader"/>
        <mapping class="com.cdmr.entity.InvoiceDetail"/>
        <mapping class="com.cdmr.entity.CdmrUsers"/>
        <mapping class="com.cdmr.entity.Cdmr"/>
        <mapping class="com.cdmr.entity.Task"/>
        <mapping class="com.cdmr.entity.TaskAssignment"/>
        <mapping class="com.cdmr.entity.TaskAssignmentPK"/>
        <mapping class="com.cdmr.entity.CdmrAdjustments"/>
        <mapping class="com.cdmr.entity.CdmrAdjustmentsPK"/>
        <mapping class="com.cdmr.entity.CdmrUserRoles"/>
        <mapping class="com.cdmr.entity.CdmrUserRolesPK"/>
        <mapping class="com.cdmr.entity.CdmrUsers"/>
        <mapping class="com.cdmr.entity.Comment"/>
        <mapping class="com.cdmr.entity.Customer"/>
        <mapping class="com.cdmr.entity.Filter"/>
        <mapping class="com.cdmr.entity.InvoiceDetailPK"/>
        <mapping class="com.cdmr.entity.InvoiceHeaderPK"/>
        <mapping class="com.cdmr.entity.SearchCDMR"/>
        <mapping class="com.cdmr.entity.SearchInbox"/>
        <mapping class="com.cdmr.entity.TaskAssignmentPK"/>

    </session-factory>

</hibernate-configuration>